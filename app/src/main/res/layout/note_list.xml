<?xml version="1.0" encoding="utf-8" ?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e6e6e6"
        >

        <TextView
            android:id="@+id/noteList_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="10dp"
            android:text="TITLE"
            android:scrollHorizontally="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/noteList_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/noteList_title"
            android:padding="10dp"
            android:textColor="#000000"
            android:scrollHorizontally="true"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="This is a test. This is where the title will go this is notes will go."/>

        <TextView
            android:id="@+id/noteList_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/noteList_note"
            android:padding="10dp"
            android:text="Date Time "
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            android:textSize="10sp"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>
